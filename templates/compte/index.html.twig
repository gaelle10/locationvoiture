{% extends 'base.html.twig' %}
{% block title %}Mon compte{% endblock %}

{% block body %}
<main>
    <section class="breadcrumb-area breadcrumb-bg" data-background="img/bg/breadcrumb_bg.jpg">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-content text-center">
                        <h2>Historique de commandes</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="author-profile-area gray-lite-bg pt-120 pb-120">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-4 col-lg-5 col-md-9 order-2 order-lg-0">
                    <aside class="author-profile-sidebar">
                        <div class="author-profile-wrap">
                            <div class="author-profile-thumb">
                                <img src="img/images/author_img.png" alt="">
                            </div>
                            <h5 class="name">{{ app.user.prenom }}</h5>
                            <span class="des">{{ app.user.pseudo }}</span>
                            <div class="location">
                                <p><i class="fas fa-map-marker-alt"></i>{{ app.user.email }}</p>
                            </div>
                        </div>
                    </aside>
                </div>
                <div class="col-xl-8 col-lg-7 col-md-9">
                    {% for commande in commandes %}
                        <div class="inventory-list-item">
                            <div class="inventory-list-thumb">
                                <img src="{{ commande.vehicule.photo }}" alt="">
                            </div>
                            <div class="inventory-list-content">
                                <div class="inv-content-top">
                                    <ul>
                                        <li class="price">Eur {{ commande.prixTotal }}<span> total</span></li>
                                        <li class="">
                                            De {{ commande.dateHeureDepart | date('d F Y') }} - {{ commande.dateHeureFin | date('d F Y') }}
                                        </li>
                                    </ul>
                                </div>
                                <h6>{{ commande.vehicule.titre }}</h6>
                                <h4>{{ commande.vehicule.marque }}</h4>
                                <p class="location"><i class="fas fa-map-marker-alt"></i>
                                    {{ commande.vehicule.description }}
                                </p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <!-- author-profile-area-end -->

    <!-- footer-brand-area -->
    <div class="footer-brand-area white-bg">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-4 col-md-6 order-2 order-md-0">
                    <div class="footer-logo">
                        <a href="index.html"><img src="img/logo/w_logo.png" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-8 col-md-6">
                    <div class="row footer-brand-active">
                        <div class="col">
